<!DOCTYPE html>
<% content_for :title do %>Schedules<% end %>


<body>
<table class="table">
  <tr>
    <th>Name</th>
    <th colspan="3">Settings</th>
  </tr>
<% @schedules.each do |schedule| %>
  <tr>
    <td><%= link_to schedule.name, schedule %></td>
    <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
    <td><%= link_to 'Remove', schedule, confirm: 'Are you sure?', method: :delete %></td>
    <td><%= link_to 'Duplicate', schedule %></td>


  </tr>
<% end %>
</table>

<br />

<%= link_to 'New schedule', new_schedule_path, class: "button radius" %>
</body>
</html>
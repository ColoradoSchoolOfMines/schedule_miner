<!DOCTYPE html>
<% content_for :title do %>Departments<% end %>
<body>
<table class="table">
  <tr>
    <th>Code</th>
    <th>Name</th>
    <% if user_has? :admin %>
      <th colspan="2">Settings</th>
    <% end %>
  </tr>

<% @departments.each do |department| %>
  <tr>
    <td><%= department.code %></td>
    <td><%= link_to department.name, department %></td>
    <% if user_has? :admin %>
      <td><%= link_to 'Edit', edit_department_path(department) %></td>
      <td><%= link_to 'Remove', department, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%if user_has? :admin %>
<%= link_to 'New Department', new_department_path, class: "button radius" %>
<% end %>
</body>
</html>

<!DOCTYPE html>
<% content_for :title do %>Profile<% end %>

<body>
<table class="users">
<tr>
	<th>First Name</th>
	<th>Middle Name</th>
	<th>Last Name</th>
	<th>Email</th>
	<th>Admin</th>
	<th>Edit</th>
</tr>
<tr>
	<td><%= current_user.first_name.gsub(/\s.+/, '') %></td>
	<td>Middle Name</td>
	<td><%= current_user.last_name %></td>
	<td><%= current_user.email %></td>
	<td><% if current_user.admin_flag == 1 %>
			No
		<% else %>
			Yes
		<% end %>
	</td>
	<td><%= link_to "Edit" %></td>
</tr>

</table>
</body>
</html>
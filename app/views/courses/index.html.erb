<!DOCTYPE html>
<% content_for :title do %>Courses<% end %>

<head>

</head>

<body>

<table class="table">
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Department</th>
    <% if current_user.admin_flag == 0 %>
      <th colspan="3">Settings></th>
    <% end %>
  </tr>

<% for course in @courses %>
  <tr>
    <td><%= course.department_code %>&nbsp;<%= course.course_number %></td>
    <td><%= link_to course.name, course %></td>
    <td><%= link_to course.department.name, course.department %>
    <% if current_user.admin_flag == 0 %>
      <td><%= link_to 'Edit', edit_course_path(course) %></td>
      <td><%= link_to 'Remove', course, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Course', new_course_path, class: "button radius" %>
</body>
</html>

